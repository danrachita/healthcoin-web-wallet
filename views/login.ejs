<!-- views/login.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.coinName %> - Login</title>
		<% include partials/meta %>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container" role="main">
					<div class="well">
						<div style="background: url('images/Icon.png') no-repeat center; margin-top: 50px; height: 128px;"><span></span></div>
						<h1 class="text-primary"><span class="fa fa-sign-in"></span> <%= settings.coinName %> - Login</h1>
						<!-- show any messages that come back with authentication -->
						<% if (message.length > 0) { %>
							<div class="alert alert-danger"><%= message %></div>
						<% } %>
						<!-- LOGIN FORM -->
						<form class="form-horizontal" role="form" action="login" method="post">
							<div class="form-group">
								<label class="control-label col-sm-2" for="email">Email</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="email">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2" for="password">Password</label>
								<div class="col-sm-10">
									<input class="form-control" type="password" name="password">
								</div>
							</div>
							<div class="form-group" style="text-align: right">
								<div class="col-sm-12">
									<button class="btn btn-primary btn-lg" type="submit">Login</button>
								</div>
							</div>
						</form>
						<div>
							<hr>
							<p>Need an account? <a href="signup">Signup here</a>.</p>
							<p>Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
						</div>
					</div>
				</div>
				<% include partials/footer %>
			</div>
		</div>
	</body>
</html>
